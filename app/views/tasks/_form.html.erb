<%= form_with model: @task do |f| %>
  <%= f.label :title, class:"form-label" %>
  <%= f.text_field :title, class:"form-control mb-2" %>
  <%= f.label :details, class:"form-label" %>
  <%= f.text_field :details, class:"form-control mb-2" %>
  <% if params[:action] == "edit" %>
    <%= f.label :completed, class:"form-label" %>
    <%= f.text_field :completed, class:"form-control mb-2" %>
  <% end %>
  <%= f.submit class:"btn btn-primary taskMarginX" %>
<% end %>
